
.main-chat
  .main-header
    %div(class = "left-box")
      %p(class = "left-box__user-name")グループ名
      %ul(class = "left-box__member-list")
        メンバー：
        %li(class = "left-box__member-list__member")usr1
    %div(class = "right-box")
      = link_to "#", class: "right-box__group-edit" do
        Edit
  .message
    %div(class = "upper-info")
      %p(class = "upper-info__talker")ユーザー名
      %p(class = "upper-info__date")投稿日時
    %p(class = "text")テキスト
  .form
    %form(class = "new-message")
      %div(class = "input-box")
        %input.input-box__text{:type => "text", :placeholder => "type a message"}
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input.input-box__image__file{:type => "file"}
      %input.submit-btn{:type => "submit", :value => "Send"}


