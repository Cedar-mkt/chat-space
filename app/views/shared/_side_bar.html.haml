.chat-side
  .side-header
    %p.side-header__username
      = current_user.name
    .side-header__box
      = link_to new_group_path, class: "side-header__box__new-group" do
        = icon('fas', 'edit')
        %span<>
      = link_to edit_user_path(current_user), class: "side-header__box__edit-user" do
        = icon('fas', 'cog')
        %span<>

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__latest-message
            最新のメッセージ
